<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="system" method="upgrade">
	<name>System - Joo Recaptcha</name>
	<author>CAMMARO</author>
	<creationDate>February 2012</creationDate>
	<copyright>Copyright 2012 StefySoft.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>extension@stefysoft.com</authorEmail>
	<authorUrl>www.stefysoft.com</authorUrl>
	<version>1.5.7</version>
	<description>JOO_RECAPTCHA_PLUGIN_DESCRIPTION</description>
	<files>
		<filename plugin="joo_recaptcha">joo_recaptcha.php</filename>
		<filename>joo_recaptcha/joo_recaptchalib.php</filename>
		<filename>joo_recaptcha/joo_api.php</filename>
	</files>
	<languages folder="lang">
        <language tag="en-GB">en-GB.plg_system_joo_recaptcha.ini</language>
    </languages>
	<params>
		<param name="@spacer0" type="spacer" default="JOO_RECAPTCHA_VERSION"/>
		<param name="@spacer" type="spacer" />
		<param name="@spacer1" type="spacer" default="JOO_RECAPTCHA_CRENDENTIALS"/>
		<param type="text" name="public" default='' label="JOO_RECAPTCHA_PUBLIC_KEY"  description="JOO_RECAPTCHA_PUBLIC_KEY_DESC" />
		<param type="text" name="private" default='' label="JOO_RECAPTCHA_PRIVATE_KEY" description="JOO_RECAPTCHA_PRIVATE_KEY_DESC" />
		<param name="@spacer" type="spacer" />
		<param name="@spacer2" type="spacer" default="JOO_RECAPTCHA_CUSTOMISATION"/>
		<param type="radio" name="ajax" default="0" label="JOO_RECAPTCHA_TYPE" description="JOO_RECAPTCHA_TYPE_DESC">
			<option value="0">JOO_RECAPTCHA_IFRAME</option>
			<option value="1">JOO_RECAPTCHA_AJAX</option>
		</param>
		<param type="list" name="template" default="0" label="JOO_RECAPTCHA_TEMPLATE" description="JOO_RECAPTCHA_TEMPLATE_DESC">
			<option value="0">JOO_RECAPTCHA_RED</option>
			<option value="1">JOO_RECAPTCHA_WHITE</option>
			<option value="2">JOO_RECAPTCHA_BLACKGLASS</option>
			<option value="3">JOO_RECAPTCHA_CLEAN</option>
		</param>
		
		<param name="@spacer" type="spacer" />
		<param name="@spacer3" type="spacer" default="JOO_RECAPTCHA_JOOMLA_FORMS"/>
		<param type="radio" name="addToUserRegistration" default="1" label="JOO_RECAPTCHA_PROTECT_REGISTRATION">
			<option value="0">No</option>
			<option value="1">JOO_RECAPTCHA_YES</option>
		</param>
		<param type="radio" name="addToLogin" default="1" label="JOO_RECAPTCHA_PROTECT_LOGIN" description="JOO_RECAPTCHA_PROTECT_LOGIN_DESC">
			<option value="0">JOO_RECAPTCHA_NO</option>
			<option value="1">JOO_RECAPTCHA_YES</option>
		</param>
		<param type="radio" name="addToFUser" default="1" label="JOO_RECAPTCHA_PROTECT_USER">
			<option value="0">JOO_RECAPTCHA_NO</option>
			<option value="1">JOO_RECAPTCHA_YES</option>
		</param>
		<param type="radio" name="addToFPass" default="1" label="JOO_RECAPTCHA_PROTECT_PASS">
			<option value="0">JOO_RECAPTCHA_NO</option>
			<option value="1">JOO_RECAPTCHA_YES</option>
		</param>
		<param type="radio" name="addToContact" default="1" label="JOO_RECAPTCHA_PROTECT_CONTACT">
			<option value="0">JOO_RECAPTCHA_NO</option>
			<option value="1">JOO_RECAPTCHA_YES</option>
		</param>
		<param type="radio" name="addToSubmitLink" default="0" label="JOO_RECAPTCHA_PROTECT_LINK">
			<option value="0">JOO_RECAPTCHA_NO</option>
			<option value="1">JOO_RECAPTCHA_YES</option>
		</param>
	</params>
</install>
